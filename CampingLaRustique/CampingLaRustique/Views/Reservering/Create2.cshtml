@model CampingLaRustique.Models.ReserveringViewModel
@{
    ViewData["Title"] = "Create2";
}

<h1>Reservering plaatsen</h1>

<h4>Selecteer een plek</h4>
<hr />
<div class="row">
    <!--   -->
    <form asp-controller="Reservering" asp-action="Create2" method="post">
            <!-- <div asp-validation-summary="ModelOnly" class="text-danger"></div> -->
        <div class="form-group">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].PlekID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].Type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].Oppervlakte)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].GratisDouche)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].Huisdieren)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].Elektriciteit)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].Ligging)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.campings[0].Prijs)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.campings)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlekID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Oppervlakte)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GratisDouche)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Huisdieren)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Elektriciteit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ligging)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prijs)
                        </td>
                        <td>
                            @Html.RadioButtonFor(model => model.IsSelected, item.PlekID, new { id = item.PlekID })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
            <div class="form-group">
                <input type="submit" name="BtnVorige" value='Vorige' class="btn btn-primary" />
                <input type="submit" name="BtnVolgende" value='Volgende' class="btn btn-primary" />
            </div>
        </form>
</div>




<div>
    <div class="col-md-4">
        <a asp-action="Index">Terug naar reserveringen</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


